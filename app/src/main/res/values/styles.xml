<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="titleTextColor">@color/text_primary_color</item>
    </style>

    <style name="base_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="clicable_text" parent="base_text">
        <item name="android:textColor">@color/primary_text_selector</item>
    </style>

    <style name="show_in_browser_text" parent="action_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="action_text" parent="base_text">
        <item name="android:textColor">@color/action_text_selector</item>
    </style>

    <style name="categories_spinner_item" parent="base_text">

    </style>

    <style name="search_edit_text" parent="base_text">
        <item name="android:textColorHint">@color/secondary_text_color</item>
    </style>

    <style name="listing_title" parent="clicable_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="listing_price" parent="base_text">
        <item name="android:textColor">@color/accent_color</item>
    </style>

</resources>